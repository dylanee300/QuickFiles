<UserControl
    x:Class="QuickFiles.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickFiles.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="#1C1C1E">
        <!--main button styles-->
        <Grid.Resources>
             <!-- other main button styles too -->
            <Style x:Key="MainButtonStyles" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#31313A"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#44444A"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
                        <!-- and listbox hover colour too -->
                        <Style x:Key="NoBlueListBoxItem" TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#26272A"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#31313A"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#26272A"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#31313A"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <!--end-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- sidebar start -->
        <DockPanel Grid.Column="0" LastChildFill="True" Background="#232326">
            <!-- home settings etc -->
            <StackPanel DockPanel.Dock="Top" Margin="0,20,0,0">
                <Button Name="HomeButton" Width="115" Height="42" Margin="16,0,16,8" Padding="4,4" Style="{StaticResource SidebarButtonStyle}" Click="HOME_CLICK">Home</Button>

                <Border Height="1" Background="#3A3A3D" Margin="16,4,16,16"/>
                                <Button Name="DesktopButton" Width="145" Height="38" Margin="16,0,16,6" Padding="8,4" Style="{StaticResource SidebarButtonStyle}" Click="DESKTOP">
                    <TextBlock HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="ðŸ“ Desktop"/>
                </Button>
                <Button Name="DownloadsButton" Width="145" Height="38" Margin="16,0,16,6" Padding="8,4" Style="{StaticResource SidebarButtonStyle}" Click="DOWNLOADS">
                    <TextBlock HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="ðŸ“ Downloads"/>
                </Button>
                <Button Name="docsButton" Width="145" Height="38" Margin="16,0,16,6" Padding="8,4" Style="{StaticResource SidebarButtonStyle}" Click="DOCUMENTS">
                    <TextBlock HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="ðŸ“ Documents"/>
                </Button>
                <Button Name="picturesButton" Width="145" Height="38" Margin="16,0,16,6" Padding="8,4" Style="{StaticResource SidebarButtonStyle}" Click="PICTRUES">
                    <TextBlock HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="ðŸ“ Pictures"/>
                </Button>
                <Button Name="videosButton" Width="145" Height="38" Margin="16,0,16,6" Padding="8,4" Style="{StaticResource SidebarButtonStyle}" Click="VIDEOS">
                    <TextBlock HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="ðŸ“ Videos"/>
                </Button>
                <Button Name="musicButton" Width="145" Height="38" Margin="16,0,16,6" Padding="8,4" Style="{StaticResource SidebarButtonStyle}" Click="MUSIC">
                    <TextBlock HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="ðŸ“ Music"/>
                </Button>
                <!--seperator line-->
                <Border Height="1" Background="#3A3A3D" Margin="16,16,16,16"/>
            </StackPanel>
			<!-- drives List -->
            <Grid DockPanel.Dock="Bottom" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <ItemsControl Name="DrivesList" HorizontalAlignment="Center">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}" Margin="0,2,0,2" Style="{StaticResource SidebarButtonStyle}" Height="32" Width="100" Click="DisplayDriveContents"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </DockPanel>
        <!-- main -->
        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="inputFilePathBox" Grid.Column="0" Height="35" Margin="0,0,10,0" Padding="8,4" Background="#222" BorderBrush="#444" BorderThickness="2" FontSize="18" FontWeight="SemiBold" Foreground="White" Text="" IsReadOnly="True" HorizontalAlignment="Stretch"/>
                        <Grid Grid.Column="1" Margin="0,0,10,0" MinWidth="160" MaxWidth="350">
                            <TextBox Name="SearchBox" Height="35" Padding="8,4" Background="#222" BorderBrush="#444" BorderThickness="2" FontSize="23" FontWeight="SemiBold" Foreground="White" Text="" IsReadOnly="False" KeyDown="SeachBox_Active"/>
                            <TextBlock x:Name="SearchPlaceholder" Text="Search..." Foreground="#888" FontSize="17" FontWeight="SemiBold" Padding="8,4" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>
                    <Button Name="GoBackButton" Grid.Column="2" Width="40" Height="35" Padding="0" Style="{StaticResource MainButtonStyles}" Click="BACK">
                        <TextBlock Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="bold" Foreground="White" Text="â†"/>
                    </Button>
                    <Button Name="GoForwardButton" Grid.Column="3" Width="40" Height="35" Padding="0" Style="{StaticResource MainButtonStyles}">
                        <TextBlock Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="bold" Foreground="White" Text="â†’"/>
                    </Button>
                    <Button Name="plusfile" Grid.Column="4" Width="30" Height="35" Margin="0,0,5,0" Padding="0" Style="{StaticResource MainButtonStyles}" Click="ADD">
                        <TextBlock Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="bold" Foreground="White" Text="+"/>
                    </Button>
                    <Button Name="deleteFile" Grid.Column="5" Width="30" Height="35" Margin="0,0,10,0" Padding="0" Style="{StaticResource MainButtonStyles}" Click="DELETE">
                        <TextBlock Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="bold" Foreground="White" Text="-"/>
                    </Button>
                    <Button Name="refressh" Grid.Column="6" Width="100" Height="35" Padding="0" Style="{StaticResource MainButtonStyles}" Click="REFRESH">
                        <TextBlock Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="bold" Foreground="White" Text="âŸ²"/>
                    </Button>
                </Grid>
                <ListBox x:Name="output" Grid.Row="1" FontFamily="Segoe UI Emoji" FontSize="18" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Foreground="White" Margin="10,0,10,0" MouseDoubleClick="OUTPUT_DOUBLECLICK" ItemContainerStyle="{StaticResource NoBlueListBoxItem}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True"/>
                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="fileIcons" Grid.Column="1" Width="64" Height="64" Margin="10,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    <StackPanel Grid.Column="0">
                        <TextBox Name="testOutput" Margin="0,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Cursor="Hand" FontSize="18" FontWeight="SemiBold" Foreground="white" IsReadOnly="True" TextWrapping="Wrap"/>
                        <TextBlock Name="LASTMODIFIED" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" Foreground="white" Text="" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

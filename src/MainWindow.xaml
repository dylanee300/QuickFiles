<Window
  x:Class="QuickFiles.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:QuickFiles"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="QuickFiles"
  MinWidth="600"
  MinHeight="400"
  WindowState="Normal"
  mc:Ignorable="d">
  <Grid Background="#1C1C1E">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0"
        Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <TextBox
        Name="inputFilePathBox"
        Grid.Column="0"
        Height="35"
        Margin="0,0,10,0"
        Padding="8,4"
        Background="#222"
        BorderBrush="#444"
        BorderThickness="2"
        FontSize="18"
        FontWeight="SemiBold"
        Foreground="White"
        Text=""/>

      <Border
        Grid.Column="1"
        Width="100"
        Height="35"
        Margin="0,0,10,0"
        Background="#31313A"
        CornerRadius="8">
        <Button
          Name="butt"
          Padding="10,5"
          Background="#4E4E55"
          BorderThickness="0"
          Click="BrowseButton_Click"
          Content="Browse"
          Cursor="Hand"
          FontSize="16"
          FontWeight="Bold"
          Foreground="White"/>
      </Border>


      <!---
          <TextBlock Name="Paths"
                  Text="C:\Users\USERNAME\Desktop&#x0a;C:\Users\USERNAME\Documents&#x0a;C:\Users\USERNAME\Downloads&#x0a;C:\Users\USERNAME\Pictures&#x0a;C:\Users\USERNAME\Videos&#x0a;C:\Users\USERNAME\Music"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Margin="50,100,0,0"
                  Width="400"
                  TextWrapping="Wrap"
                  Foreground="#CCC"
                  FontSize="20"
                 FontWeight="SemiBold"
                  />
      -->


      <Button
        Name="plusfile"
        Grid.Column="2"
        Width="30"
        Height="35"
        Margin="0,0,5,0"
        Padding="0"
        Background="#4E4E55"
        BorderThickness="0"
        Click="TEST_ADD_CLICK"
        Cursor="Hand">

        <TextBlock
          Margin="0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          FontSize="16"
          FontWeight="bold"
          Foreground="White"
          Text="+"/>

      </Button>

      <Button
        Name="deleteFile"
        Grid.Column="3"
        Width="30"
        Height="35"
        Margin="0,0,10,0"
        Padding="0"
        Background="#4E4E55"
        BorderThickness="0"
        Click="TEST_DEL_CLICK"
        Cursor="Hand">

        <TextBlock
          Margin="0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          FontSize="16"
          FontWeight="bold"
          Foreground="White"
          Text="-"/>

      </Button>

      <Button
        Name="refressh"
        Grid.Column="4"
        Width="100"
        Height="35"
        Padding="0"
        Background="#4E4E55"
        BorderThickness="0"
        Click="REF_CLICK"
        Cursor="Hand">

        <TextBlock
          Margin="0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          FontSize="16"
          FontWeight="bold"
          Foreground="White"
          Text="⟲"/>



      </Button>

    </Grid>

    <Grid Grid.Row="1"
        Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <StackPanel
        Grid.Column="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Orientation="Horizontal">
        <Button
          Name="DesktopButton"
          Width="150"
          Height="54"
          Margin="0,0,20,0"
          Padding="5,5"
          Background="#4E4E55"
          Click="DESKTOP_CLICK"
          Cursor="Hand">

          <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="White"
            Text="📁 Desktop"/>
        </Button>

        <Button
          Name="DownloadsButton"
          Width="150"
          Height="54"
          Padding="-3,-3"
          Background="#4E4E55"
          Click="DOWNLOADS_CLICK"
          Cursor="Hand">

          <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="White"
            Text="📁 Downloads"/>
        </Button>

        <Button
          Name="docsButton"
          Width="150"
          Height="54"
          Margin="10,0,0,0"
          Padding="5,5"
          Background="#4E4E55"
          Click="DOCS_CLICK">

          <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="White"
            Text="📁 Documents"/>
        </Button>

        <Button
          Name="pictures"
          Width="150"
          Height="54"
          Margin="10,0,0,0"
          Padding="5,5"
          Background="#4E4E55"
          Click="PIC_CLICK"
          Cursor="Hand">

          <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="White"
            Text="📁 Pictures"/>
        </Button>
      </StackPanel>

      <StackPanel
        Grid.Column="0"
        Margin="0,70,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Orientation="Horizontal">
        <Button
          Name="drives"
          Width="150"
          Height="54"
          Padding="5,5"
          Background="#4E4E55"
          Click="DRIVES_CLICK">
          <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="White"
            Text="[emoji] Drives"/>
        </Button>
      </StackPanel>

      <Image
        Name="fileIcons"
        Grid.Column="1"
        Width="64"
        Height="64"
        Margin="10,0,0,0"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"/>

    </Grid>

    <Grid Grid.Row="2"
        Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <TextBox
        Name="testOutput"
        Grid.Row="0"
        Margin="10,10,10,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        FontSize="18"
        FontWeight="SemiBold"
        Foreground="white"
        IsReadOnly="True"
        TextWrapping="Wrap"/>

      <TextBlock
        Name="LASTMODIFIED"
        Grid.Row="1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        FontSize="14"
        FontWeight="SemiBold"
        Foreground="white"
        Text=""
        TextWrapping="Wrap"/>

    </Grid>

  </Grid>
</Window>